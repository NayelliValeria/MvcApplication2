@model MvcApplication2.Models.reclutador

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LoginPartial.cshtml";
}

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true, "Error al iniciar sesión.");
    <form>
        <fieldset>
            <div class="form-group">
                @Html.TextBoxFor(x => x.usuario, new { @class = "from-group", placeholder = "Nombre de usuario" })
            </div>
            <div class="form-group">
                @Html.PasswordFor(x => x.password, new { @class="from-control", placeholder = "Contraseña"})
            </div>
            <div class="checkbox">
                <label>@Html.CheckBoxFor(x => x.rememberMe) Recordar esta sesión</label>
            </div>
            <input type="submit" class="btn btn-lg btn-success btn-block" value="Login"/>
        </fieldset>
    </form>
}